@using Retail_Banking_API.Models
@using Retail_Banking_API.Controllers
@model Customer

@{
    ViewData["Title"] = "GetCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Response"] != null)
{
    <div class="alert alert-dark" role="alert">
        <h4 class="alert-heading">@TempData["Response"]</h4>
        <hr>
        <p class="mb-0">To go back home @Html.ActionLink("Click me!","Index","Home")</p>
    </div>
}

<h4>Search Customers.</h4>
<hr />
<div class="row align-items-center">
    <div class="col-md-6">
        <form asp-action="ShowCustomer">
            <div class="form-group">
                <label name="cid" id="cid">Customer ID</label>
                <input type="number" name="cid" id="cid" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <hr />
    </div>
    <div class="col-md-5">
        <div class="row">
            <img src="https://s42137.pcdn.co/wp-content/uploads/2022/10/majority-of-banking-institutions-building-their-own-technology-stack.jpeg.optimal.jpeg" class="img-fluid">
        </div>
    </div>
</div>



